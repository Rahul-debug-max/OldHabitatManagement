
@model HabitatManagement.BusinessEntities.PermitFormScreenDesignTemplateBE

@{
    Layout = null;
}
<form id="PermitDesignTemplateForm" asp-controller="Home"  asp-action="PermitFormScreenDesignTemplate">
    <div class="container-fluid">
        <div class="form-group row">
            <label class="col-lg-2 text-right col-form-label paddlftrght-none" asp-for="Design" id="lblDesign">Form Name</label>
            <div class="col-lg-7">
                @Html.TextBox("Design", Model.Design, new { @class = "form-control uppercaseTextBox", @maxlength = "20" })
                <span asp-validation-for="Design" class="text-danger"></span>
            </div>
            <label class="col-lg-3 text-right col-form-label paddlftrght-none" for="Active" id="lblActive" style="padding-bottom: 0px !important;">
                Active &nbsp <span>@Html.CheckBox("Active", Model.Active, new { @style = "position: relative; top: 2px;" })</span>
            </label>
        </div>
        <div class="form-group row">
            <label class="col-lg-2 text-right col-form-label paddlftrght-none" asp-for="Description" id="lblDescription">Description</label>
            <div class="col-lg-10">
                @Html.TextBox("Description", Model.Description, new { @class = "form-control", @maxlength = "60" })
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>        
        @Html.HiddenFor(m => m.FormID)
    </div>
</form>

@section Scripts {        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}    }